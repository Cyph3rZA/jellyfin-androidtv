<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/searchField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:hint="@string/lbl_search_hint"
        android:minWidth="400sp"
        android:minHeight="30sp"
        android:textSize="18sp" />

    <fragment
        android:id="@+id/fragment_search_no_speech"
        android:name="org.jellyfin.androidtv.search.MySearchFragmentNoSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120sp"
        tools:layout="@layout/fragment_empty_frame" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searchField"
        android:layout_alignBottom="@+id/searchField"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@+id/searchField"
        android:src="@drawable/lb_ic_in_app_search" />
</RelativeLayout>
